# plugins/breakout_strategy.py

def generate_signal(df):
    """
    Prosta strategia breakout: kupno, jeÅ›li obecna Å›wieca zamyka siÄ™ powyÅ¼ej maksimum z ostatnich 20 Å›wiec.
    """
    if len(df) < 20:
        return "Za maÅ‚o danych"

    recent_high = df["close"].iloc[-20:-1].max()
    current_close = df["close"].iloc[-1]

    if current_close > recent_high:
        return "BUY â€“ Breakout ğŸ”¼"
    elif current_close < df["close"].iloc[-20:-1].min():
        return "SELL â€“ Breakdown ğŸ”½"
    else:
        return "HOLD â€“ Konsolidacja"
